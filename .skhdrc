hyper - a: open -nb org.alacritty
hyper - r: open -a Mail
hyper - s: osascript -e 'tell application "Safari" to make new document' -e 'delay 0.2' && open -a Safari # In testing, 1.08 is the minimum delay, but it's not consistent.
hyper - t: osascript -e 'tell application "Notes" to make new document' && open -a Notes
hyper - d: open -n -a Discord
#------------------
hyper - z: open -b "com.apple.systempreferences"
hyper - x: open -a "Microsoft Excel"
hyper - c: open -a Calendar
